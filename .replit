modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3000
externalPort = 80

[packager]
ignoredPaths = [".env"]

[workflows]
runButton = "Push Code on GitHub"

[[workflows.workflow]]
name = "Push Code on GitHub"
author = 41949365
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx scripts/commit-push.ts"

[[workflows.workflow]]
name = "Setup Git Config"
author = 41949365
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx scripts/setup-git.ts"
